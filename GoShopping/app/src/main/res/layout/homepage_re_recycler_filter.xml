<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/floatingToper"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <!--品牌-->
    <LinearLayout
        android:id="@+id/ll_brand"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/ripple_item_clicked"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="品牌"
            android:textColor="@color/font_black_2"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/iv_brand_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/home_down_arrow" />
    </LinearLayout>

    <View
        android:layout_width="1px"
        android:layout_height="20dp"
        android:background="@color/font_black_5" />

    <LinearLayout
        android:id="@+id/ll_city"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/ripple_item_clicked"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全城"
            android:textColor="@color/font_black_2"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/iv_city_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/home_down_arrow" />
    </LinearLayout>

    <View
        android:layout_width="1px"
        android:layout_height="20dp"
        android:background="@color/font_black_5" />

    <LinearLayout
        android:id="@+id/ll_rating"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/ripple_item_clicked"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="好评优先"
            android:textColor="@color/font_black_2"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/iv_rating_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/home_down_arrow" />
    </LinearLayout>
</LinearLayout>